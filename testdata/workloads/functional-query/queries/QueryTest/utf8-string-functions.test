select instr('最快的SQL引擎跑SQL', 'SQL'),
       instr('最快的SQL引擎跑SQL', '引擎'),
       instr('最快的SQL引擎跑SQL', 'SQL引擎'),
       instr('最快的SQL引擎跑SQL', '跑SQL'),
       instr('最快的SQL引擎跑SQL', 'SQL', 1, 2),
